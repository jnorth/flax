{
  "name": "flax",
  "version": "0.0.1",
  "author": "Joseph North <north@sublink.ca>",
  "description": "A classical flux.",
  "keywords": [
    "react",
    "flux"
  ],
  "license": "MIT",
  "repository": "jnorth/flax",
  "browser": "dist/flax.js",
  "main": "dist/flax.common.js",
  "module": "dist/flax.esm.js",
  "jsnext:main": "dist/flax.esm.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "node build/rollup.js",
    "pretest": "npm run build",
    "test": "ava"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-env": "^1.2.1",
    "babel-preset-stage-1": "^6.22.0",
    "rimraf": "^2.6.1",
    "rollup": "^0.41.5",
    "rollup-plugin-babel": "^2.7.1",
    "uglify-js": "^2.8.22"
  },
  "babel": {
    "presets": [
      ["env", { "modules": false }],
      "stage-1"
    ],
    "plugins": ["transform-decorators-legacy"]
  },
  "ava": {
    "require": "babel-register",
    "babel": {
      "presets": ["env", "stage-1"],
      "plugins": ["transform-decorators-legacy"]
    }
  }
}
